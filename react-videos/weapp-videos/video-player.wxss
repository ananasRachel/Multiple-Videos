.video-player {
  position: relative;
}

.trigger,
.image,
.video {
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.trigger {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.14);
}
.trigger-image {
  display: block;
  width: 46px;
  height: 46px;
}
